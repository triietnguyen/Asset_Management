<?xml version="1.0" encoding="utf-8"?>
<layout>
    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2,3,4,5,6,7">
        <TableRow
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/txt_request_user_name_layout"
                android:layout_width="120dp"
                android:background="@drawable/header_border"
                android:textSize="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/txt_request_asset_name_layout"
                android:layout_width="120dp"
                android:background="@drawable/header_border"
                android:textSize="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/txt_request_asset_category_layout"
                android:layout_width="120dp"
                android:background="@drawable/header_border"
                android:textSize="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/txt_request_description_layout"
                android:layout_width="120dp"
                android:background="@drawable/header_border"
                android:textSize="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/txt_request_asset_date_layout"
                android:layout_width="120dp"
                android:background="@drawable/header_border"
                android:textSize="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/txt_request_end_date_layout"
                android:layout_width="120dp"
                android:background="@drawable/header_border"
                android:textSize="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/txt_request_status_layout"
                android:layout_width="120dp"
                android:background="@drawable/header_border"
                android:textSize="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:maxLines="1"/>
            <ImageView
                android:id="@+id/img_request_edit_layout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/baseline_edit_24"
                >
            </ImageView>
            <ImageView
                android:id="@+id/img_request_cancel_layout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/baseline_cancel_24"
                >
            </ImageView>
        </TableRow>
    </TableLayout>
</layout>
