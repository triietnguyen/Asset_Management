<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="UserAdminActivity_ModelView"
            type="com.example.navigationdrawer.viewmodel.admin.UserAdminActivity_ModelView" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".view.user.CreateUserAdminActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@drawable/staff"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="New User"
                android:textSize="30dp">
            </TextView>
        </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="25dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Joined Date"
                android:textSize="25dp">

            </TextView>
            <EditText
                android:id="@+id/edt_Joined_Date_Layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@={UserAdminActivity_ModelView.date}"
                android:hint="dd/mm/yy"
                android:background="@drawable/custom_bg_edt"
                android:textSize="20dp"
                android:layout_marginVertical="10dp"
                android:inputType="date"
                android:paddingHorizontal="10dp"
                >
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="25dp">

            </TextView>
            <EditText
                android:id="@+id/edt_Name_Layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_bg_edt"
                android:text="@={UserAdminActivity_ModelView.fullname}"
                android:textSize="20dp"
                android:layout_marginVertical="10dp"
                android:inputType="textPersonName"
                android:paddingHorizontal="10dp"
                >
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of birth"
                android:textSize="25dp">

            </TextView>
            <EditText
                android:id="@+id/edt_Date_of_birth_Layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="dd/mm/yy"
                android:text="@={UserAdminActivity_ModelView.birthday}"
                android:background="@drawable/custom_bg_edt"
                android:textSize="20dp"
                android:layout_marginVertical="10dp"
                android:inputType="date"
                android:paddingHorizontal="10dp"
                >
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="25dp">

            </TextView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Spinner
                    android:id="@+id/gender_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_bg_edt"
                    android:textSize="20dp"
                    android:layout_marginVertical="10dp"
                    android:paddingHorizontal="10dp"
                    >
                </Spinner>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/baseline_arrow_drop_down_24"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="25dp">

            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_bg_edt"
                android:textSize="20dp"
                android:text="@={UserAdminActivity_ModelView.address}"
                android:layout_marginVertical="10dp"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                >
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="25dp">

            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_bg_edt"
                android:textSize="20dp"
                android:text="@={UserAdminActivity_ModelView.phone}"
                android:layout_marginVertical="10dp"
                android:inputType="phone"
                android:paddingHorizontal="10dp"
                >
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="25dp">

            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_bg_edt"
                android:textSize="20dp"
                android:text="@={UserAdminActivity_ModelView.email}"
                android:layout_marginVertical="10dp"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="10dp"
                >
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="25dp">

            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_bg_edt"
                android:text="@={UserAdminActivity_ModelView.password}"
                android:textSize="20dp"
                android:layout_marginVertical="10dp"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                >
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Role"
                android:textSize="25dp">

            </TextView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Spinner
                    android:id="@+id/role_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_bg_edt"
                    android:textSize="20dp"
                    android:layout_marginVertical="10dp"
                    android:paddingHorizontal="10dp"
                    >
                </Spinner>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/baseline_arrow_drop_down_24"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_Save_NewRequestPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Save"
                    android:onClick="@{()->UserAdminActivity_ModelView.OnClickSaveButton(context)}"
                    android:textSize="25dp"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="#FB6771"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    >
                </Button>
                <Button
                    android:id="@+id/img_Cancel_Layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Cancel"
                    android:textSize="25dp"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="#555659"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    >
                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    </LinearLayout>
</layout>
