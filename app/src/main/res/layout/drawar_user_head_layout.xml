<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="Drawer_ModelView"
            type="com.example.navigationdrawer.MainActivity_ModelView" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_marginTop="25dp"
            android:id="@+id/drawarHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/logo_profile_1"
                />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/khang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:text="@={Drawer_ModelView.fullName}"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#AE000000"
                    android:text="@={Drawer_ModelView.email}"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    />

            </LinearLayout>

        </LinearLayout>
        <View
            android:elevation="5dp"
            android:layout_below="@id/drawarHeader"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#43000000"
            />
    </RelativeLayout>
</layout>
