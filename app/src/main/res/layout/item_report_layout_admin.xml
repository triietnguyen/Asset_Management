<?xml version="1.0" encoding="utf-8"?>
<layout>
    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2,3,4,5,6">
        <TableRow
            android:layout_marginVertical="10dp">
            <TextView
                android:id="@+id/txt_category_id_layout"
                android:layout_marginHorizontal="10dp"
                android:layout_width="120dp"
                android:textSize="16dp"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txt_total_layout"
                android:layout_marginHorizontal="10dp"
                android:layout_width="120dp"
                android:textSize="16dp"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txt_assigned_layout"
                android:layout_marginHorizontal="10dp"
                android:layout_width="120dp"
                android:textSize="16dp"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txt_available_layout"
                android:layout_marginHorizontal="10dp"
                android:layout_width="120dp"
                android:textSize="16dp"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txt_not_available_layout"
                android:layout_marginHorizontal="10dp"
                android:layout_width="120dp"
                android:textSize="16dp"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txt_waiting_layout"
                android:layout_marginHorizontal="10dp"
                android:layout_width="120dp"
                android:textSize="16dp"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>
</layout>
