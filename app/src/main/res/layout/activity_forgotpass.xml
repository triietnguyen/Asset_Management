<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back_account"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="20dp"
                android:src="@drawable/baseline_arrow_back_ios_24">
            </ImageView>
        </LinearLayout>
        <TextView
            android:layout_marginHorizontal="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find account"
            android:textStyle="bold"
            android:textSize="30dp">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edt_email_forgot"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:hint="Email"
                android:background="#EEEEEE"
                android:textSize="20dp"
                android:layout_marginVertical="15dp"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="10dp"
                >
            </EditText>
            <ImageButton
                android:id="@+id/img_btn_forgot_layout"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_send_24">
            </ImageButton>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edt_OTP"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:hint="Enter OTP"
            android:layout_marginHorizontal="15dp"
            android:background="#EEEEEE"
            android:textSize="20dp"
            android:layout_marginVertical="15dp"
            android:inputType="number"
            android:paddingHorizontal="10dp"
            >
        </EditText>
    </LinearLayout>

        <Button
            android:id="@+id/btn_Submit_ForgotPass_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/custom_bg_border"
            android:text="Submit"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            >
        </Button>
    </LinearLayout>
</layout>
